<!DOCTYPE html>
<html lang="en">
<!--
  The include tags in the HTML.ejs files allow the code to be cleaner and the site to be rendered dynamically.
-->
<%- include('layouts/head'); -%>


<body>

  <%- include('layouts/navbar'); -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">Blog For Portfolio</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <!-- Loops Through the blogpost array (Each document in the collection) and creates a post preview. 
        * Needs the  { } brackets -->
        <% for (var i = 0; i < blogpost.length; i++) { %>
        <div class="post-preview">
          <!-- below link allows the post to be clicked and the proper id be shown-->
          <a href="/post/<%= blogpost[i]._id%>">
            <h2 class="post-title">
              <%= blogpost[i].title %>
            </h2>
            <h3 class="post-subtitle">
              <%- blogpost[i].body %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <!--Populating the posted by with the username -->
            <a href="#"><%= blogpost[i].userid.username %></a>
            on <%= blogpost[i].datePosted.toDateString() %></p>
        </div>
        <hr>
        <% } %>
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <%- include('layouts/footer'); -%>
  <%- include('layouts/scripts'); -%>
  

</body>

</html>
